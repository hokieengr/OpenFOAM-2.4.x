FoamFile
{
    version 2.0;
    format ascii;
    class volScalarField;
    object p;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions [0 2 -2 0 0 0 0]; // kinematic pressure: p/rho

// still unclear on this. See User Guide Lid Cavity Driven Flow example. 
// Long story short: for incompressible flow this doesn't matter so set to 0.
internalField uniform 0;

boundaryField
{
    inlet
    {
        type freestreamPressure;
    }
    
    outlet
    {
        type freestreamPressure;
    }
    
    front
    {
        type freestreamPressure;
    }
    
    top
    {
        type freestreamPressure;
    }
    
    back
    {
        type freestreamPressure;
    }
    
    bottom
    {
        type freestreamPressure;
    }
    
    uav
    {
        type zeroGradient;
    }
}
